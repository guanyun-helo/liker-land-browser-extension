{
  "extends": ["onepass"],
  "env": {
    "browser": true,
    "webextensions": true
  },
  "rules": {
    "no-console": 0,
    "no-extend-native": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
